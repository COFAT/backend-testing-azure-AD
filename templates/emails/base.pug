doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    style.
      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f5;
        margin: 0;
        padding: 20px;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        background-color: #ffffff;
      }
      .header {
        text-align: center;
        margin-bottom: 20px;
      }
      .header h2 {
        color: #3b82f6;
        margin: 0;
        font-size: 24px;
      }
      .header p {
        color: #64748b;
        font-size: 14px;
        margin: 5px 0 0;
      }
      .content {
        border-top: 1px solid #e0e0e0;
        border-bottom: 1px solid #e0e0e0;
        padding: 20px 0;
        margin: 20px 0;
      }
      .content h3 {
        color: #1e293b;
        margin-top: 0;
      }
      .content p {
        color: #475569;
        line-height: 1.6;
      }
      .otp-code {
        text-align: center;
        margin: 25px 0;
      }
      .otp-code span {
        background-color: #f1f5f9;
        padding: 15px 30px;
        font-size: 32px;
        font-weight: bold;
        letter-spacing: 8px;
        color: #3b82f6;
        border-radius: 8px;
        display: inline-block;
      }
      .cta-button {
        text-align: center;
        margin: 25px 0;
      }
      .cta-button a {
        background-color: #3b82f6;
        color: white;
        padding: 12px 24px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
      }
      .cta-button a:hover {
        background-color: #2563eb;
      }
      .footer {
        text-align: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #e0e0e0;
      }
      .footer p {
        color: #64748b;
        font-size: 12px;
        margin: 0;
      }
      .footer p + p {
        margin-top: 5px;
      }
      .info-box {
        background-color: #fef3c7;
        border: 1px solid #f59e0b;
        border-radius: 6px;
        padding: 12px;
        margin: 15px 0;
      }
      .info-box p {
        color: #92400e;
        margin: 0;
        font-size: 14px;
      }
  body
    .container
      .header
        h2 COFAT
        p Digital Recruitment Platform
      
      .content
        block content
      
      .footer
        p Â© #{year} COFAT. All rights reserved.
        p If you didn't request this email, you can safely ignore it.
