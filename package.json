    "@types/pg": "^8.16.0",
    "@types/pug": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prisma": "^7.0.0",
    "ts-jest": "^29.4.6",
